<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_menu"
    tools:context=".MenuActivity"
    android:background="@drawable/bg_materi">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear_container"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

                <ImageView
                    android:id="@+id/iv_auaj"
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:padding="12dp"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/wayang"/>

                <TextView
                    android:id="@+id/tv_auaj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_auaj"
                    android:text="Asal Urun Aksara Jawa"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#9f5b2e"/>

                <ImageView
                    android:id="@+id/iv_materi"
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_below="@id/tv_auaj"
                    android:layout_centerHorizontal="true"
                    android:padding="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/aksara_carakan" />

                <TextView
                    android:id="@+id/tv_materi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_materi"
                    android:text="Materi"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#9f5b2e"/>

                <ImageView
                    android:id="@+id/iv_dolanan"
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_below="@id/tv_materi"
                    android:layout_centerHorizontal="true"
                    android:padding="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dolanan"
                    />

                <TextView
                    android:id="@+id/tv_dolanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_dolanan"
                    android:text="Dolanan"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#9f5b2e"/>

                <ImageView
                    android:id="@+id/iv_poin"
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_below="@id/tv_dolanan"
                    android:layout_centerHorizontal="true"
                    android:padding="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/koin" />

                <TextView
                    android:id="@+id/tv_poin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_poin"
                    android:text="Cek Poin"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#9f5b2e"/>

            </RelativeLayout>

        </LinearLayout>


</ScrollView>