<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_materi2"
    tools:context=".TerjemahAks2Activity">


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#9f5b2e"
        android:text="Terjemah Aksara"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv1"/>

    <ImageView
        android:padding="20dp"
        android:layout_height="150dp"
        android:layout_width="300dp"
        android:id="@+id/iv_ta2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/terjemahan2"
        android:layout_below="@id/tv1"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#a35638"
        android:text="1. Terjemah kalimat diatas adalah..."
        android:layout_alignParentLeft="true"
        android:id="@+id/tv2"
        android:layout_below="@+id/iv_ta2"/>


    -<RadioGroup
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="10dp"
    android:id="@+id/radioGroup"
    android:layout_below="@+id/tv2">

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#a35638"
        android:text="anak kadhal"
        android:id="@+id/r1a"
        android:onClick="onRadioButtonClicked"
        android:checked="true"/>

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#a35638"
        android:text="katon cetha"
        android:id="@+id/r2a"
        android:onClick="onRadioButtonClicked"/>

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#a35638"
        android:text="katon apik"
        android:id="@+id/r3a"
        android:onClick="onRadioButtonClicked"/>

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#a35638"
        android:text="mangan roti"
        android:id="@+id/r4a"
        android:onClick="onRadioButtonClicked"/>

</RadioGroup>

    <Button
        android:background="@drawable/button1"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Kirim"
        android:id="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radioGroup"
        android:onClick="showKirim"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>