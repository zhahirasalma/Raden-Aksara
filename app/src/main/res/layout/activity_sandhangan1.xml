<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_menu"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0e8c3"
    tools:context=".Sandhangan1Activity"
    >

            <TextView
                android:id="@+id/raden_sdn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Raden Aksara"
                android:textSize="24sp"
                android:textColor="@color/coklat"
                />

            <ImageView
                android:id="@+id/logo_sdn1"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:layout_toRightOf="@+id/raden_sdn1"
                android:src="@drawable/logo_atas" />

            <TextView
                android:id="@+id/materi_sdn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aksara Sandhangan"
                android:layout_below="@+id/raden_sdn1"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/coklat"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:id="@+id/image_sdn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/materi_sdn1"
                android:src="@drawable/sandhangan1" />


            <ImageView
                android:id="@+id/next_sdn1"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:outlineSpotShadowColor="@color/coklat"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                />
        </RelativeLayout>
